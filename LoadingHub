-- Limpieza inicial para evitar conflictos
if game:GetService("CoreGui"):FindFirstChild("xSOLITOxHUB_GUI") then
	game:GetService("CoreGui").xSOLITOxHUB_GUI:Destroy()
end
if game:GetService("CoreGui"):FindFirstChild("xSOLITOxHUB_Icon") then
	game:GetService("CoreGui").xSOLITOxHUB_Icon:Destroy()
end
if game:GetService("CoreGui"):FindFirstChild("xSOLITOxHUB_Notifications") then
	game:GetService("CoreGui").xSOLITOxHUB_Notifications:Destroy()
end

local Library = {}
Library.__index = Library

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- =============================================
-- ESTILOS Y COLORES CENTRALIZADOS
-- =============================================
local Styles = {
	Colors = {
		Primary = Color3.fromRGB(1, 94, 255),
		Dark = Color3.fromRGB(22, 22, 26),
		LighterDark = Color3.fromRGB(35, 35, 40),
		Text = Color3.fromRGB(255, 255, 255),
		SubText = Color3.fromRGB(150, 150, 150),
		GradientStart = Color3.fromRGB(1, 94, 255),
		GradientEnd = Color3.fromRGB(255, 5, 70)
	},
	Fonts = {
		Title = Enum.Font.GothamBold,
		Subtitle = Enum.Font.Cartoon,
		Tab = Enum.Font.Roboto,
		Header = Enum.Font.GothamBold,
		Text = Enum.Font.Cartoon,
		Desc = Enum.Font.Gotham,
		Dropdown = Enum.Font.Nunito
	}
}

-- Función para aplicar el degradado
local function ApplyDefaultGradient(element)
	if element:FindFirstChildOfClass("UIGradient") then return end
	local gradient = Instance.new("UIGradient")
	gradient.Color = ColorSequence.new({
		ColorSequenceKeypoint.new(0, Styles.Colors.GradientStart),
		ColorSequenceKeypoint.new(1, Styles.Colors.GradientEnd)
	})
	gradient.Rotation = 45
	gradient.Parent = element
end

-- =============================================
-- CONSTRUCTOR PRINCIPAL DE LA VENTANA
-- =============================================
function Library.new(config)
	local self = setmetatable({}, Library)

	-- Ventana Principal (ScreenGui)
	self.ScreenGui = Instance.new("ScreenGui")
	self.ScreenGui.Name = "xSOLITOxHUB_GUI"
	self.ScreenGui.Parent = game:GetService("CoreGui")
	self.ScreenGui.DisplayOrder = 999
	self.ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

	-- Marco Exterior (El que lleva el borde brilloso)
	local OutlineMain = Instance.new("Frame")
	OutlineMain.Name = "OutlineMain"
	OutlineMain.Parent = self.ScreenGui
	OutlineMain.AnchorPoint = Vector2.new(0.5, 0.5)
	OutlineMain.Position = UDim2.new(0.5, 0, 0.45, 0)
	OutlineMain.Size = UDim2.new(0, config.Size.X.Offset, 0, config.Size.Y.Offset)
	OutlineMain.BackgroundColor3 = Styles.Colors.Dark
	OutlineMain.BackgroundTransparency = 0.1
	OutlineMain.ClipsDescendants = false
	local corner = Instance.new("UICorner", OutlineMain)
	corner.CornerRadius = UDim.new(0, 15)

	-- BORDE BRILLOSO
	local borderStroke = Instance.new("UIStroke")
	borderStroke.Thickness = 10
	borderStroke.LineJoinMode = Enum.LineJoinMode.Round
	borderStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
	borderStroke.Parent = OutlineMain

	local colorGradient = Instance.new("UIGradient")
	colorGradient.Color = ColorSequence.new({
		ColorSequenceKeypoint.new(0, Styles.Colors.GradientStart),
		ColorSequenceKeypoint.new(1, Styles.Colors.GradientEnd)
	})
	colorGradient.Rotation = 45
	colorGradient.Parent = borderStroke

	local transparencyGradient = Instance.new("UIGradient")
	transparencyGradient.Transparency = NumberSequence.new({
		NumberSequenceKeypoint.new(0, 0.2),
		NumberSequenceKeypoint.new(0.5, 0.8),
		NumberSequenceKeypoint.new(1, 1)
	})
	transparencyGradient.Rotation = 120
	transparencyGradient.Parent = borderStroke

	-- Contenedor Interior (Transparente, para mantener la estructura)
	local Main = Instance.new("Frame")
	Main.Name = "Main"
	Main.Parent = OutlineMain
	Main.AnchorPoint = Vector2.new(0.5, 0.5)
	Main.Position = UDim2.new(0.5, 0, 0.5, 0)
	Main.Size = UDim2.new(1, -20, 1, -20)
	Main.BackgroundTransparency = 1
	Main.ClipsDescendants = true
	local mainCorner = Instance.new("UICorner", Main)
	mainCorner.CornerRadius = UDim.new(0, 12)

	-- Barra Superior (Título, Subtítulo, Botones)
	local TopBar = Instance.new("Frame")
	TopBar.Name = "TopBar"
	TopBar.Parent = Main
	TopBar.Size = UDim2.new(1, 0, 0, 40)
	TopBar.BackgroundTransparency = 1

	local Title = Instance.new("TextLabel")
	Title.Name = "Title"
	Title.Parent = TopBar
	Title.Font = Styles.Fonts.Title
	Title.Text = config.Title or "xSOLITOx HUB"
	Title.TextSize = 20
	Title.TextColor3 = Styles.Colors.Text
	Title.BackgroundTransparency = 1
	Title.TextXAlignment = Enum.TextXAlignment.Left
	Title.Position = UDim2.new(0, 15, 0.5, 0)
	Title.AnchorPoint = Vector2.new(0, 0.5)
	Title.Size = UDim2.fromOffset(game:GetService("TextService"):GetTextSize(Title.Text, Title.TextSize, Title.Font, Vector2.new()).X, 25)

	local SubTitle = Instance.new("TextLabel")
	SubTitle.Name = "SubTitle"
	SubTitle.Parent = TopBar
	SubTitle.Font = Styles.Fonts.Subtitle
	SubTitle.Text = config.SubTitle
	SubTitle.TextSize = 15
	SubTitle.TextColor3 = Styles.Colors.SubText
	SubTitle.BackgroundTransparency = 1
	SubTitle.TextXAlignment = Enum.TextXAlignment.Left
	SubTitle.AnchorPoint = Vector2.new(0, 0.5)
	SubTitle.Position = UDim2.new(0, Title.AbsoluteSize.X + 25, 0.5, 0)
	SubTitle.Size = UDim2.fromOffset(game:GetService("TextService"):GetTextSize(SubTitle.Text, SubTitle.TextSize, SubTitle.Font, Vector2.new()).X, 25)

	local CloseButton = Instance.new("ImageButton")
	CloseButton.Name = "CloseButton"
	CloseButton.Parent = TopBar
	CloseButton.Size = UDim2.new(0, 20, 0, 20)
	CloseButton.Position = UDim2.new(1, -15, 0.5, 0)
	CloseButton.AnchorPoint = Vector2.new(1, 0.5)
	CloseButton.BackgroundTransparency = 1
	CloseButton.Image = "rbxassetid://7743878857"
	CloseButton.MouseButton1Click:Connect(function() self.ScreenGui.Enabled = false end)

	-- Contenedor de Pestañas (Izquierda)
	local TabContainer = Instance.new("ScrollingFrame")
	TabContainer.Name = "TabContainer"
	TabContainer.Parent = Main
	TabContainer.Size = UDim2.new(0, config.TabWidth, 1, -48)
	TabContainer.Position = UDim2.new(0, 8, 0, 40)
	TabContainer.BackgroundTransparency = 1
	TabContainer.BorderSizePixel = 0
	TabContainer.ScrollBarThickness = 0
	
	local TabListLayout = Instance.new("UIListLayout", TabContainer)
	TabListLayout.Padding = UDim.new(0, 2)
	TabListLayout.SortOrder = Enum.SortOrder.LayoutOrder

	-- Contenedor de Páginas (Derecha)
	local PageContainer = Instance.new("Frame")
	PageContainer.Name = "PageContainer"
	PageContainer.Parent = Main
	PageContainer.Size = UDim2.new(1, -config.TabWidth - 25, 1, -48)
	PageContainer.Position = UDim2.new(0, config.TabWidth + 18, 0, 40)
	PageContainer.BackgroundTransparency = 1
	PageContainer.ClipsDescendants = true

	local UIPageLayout = Instance.new("UIPageLayout", PageContainer)
	UIPageLayout.SortOrder = Enum.SortOrder.LayoutOrder
	UIPageLayout.TweenTime = 0.2

	self.TabContainer = TabContainer
	self.PageContainer = PageContainer
	self.Tabs = {}
	self.Pages = {}
	self.CurrentTab = nil

    local function MakeDraggable(topbarobject, object)
        local Dragging, DragStart, StartPosition;
        topbarobject.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                Dragging = true
                DragStart = input.Position
                StartPosition = object.Position
                input.Changed:Connect(function()
                    if input.UserState == Enum.UserInputState.End then
                        Dragging = false
                    end
                end)
            end
        end)
        UserInputService.InputChanged:Connect(function(input)
            if (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) and Dragging then
                local Delta = input.Position - DragStart
                object.Position = UDim2.new(StartPosition.X.Scale, StartPosition.X.Offset + Delta.X, StartPosition.Y.Scale, StartPosition.Y.Offset + Delta.Y)
            end
        end)
    end
	MakeDraggable(TopBar, OutlineMain)

	return self
end

-- =============================================
-- MÉTODO PARA CREAR PESTAÑAS
-- =============================================
function Library:Tab(name, icon)
	local TabObject = {}
	
	-- Botón de la Pestaña
	local TabButton = Instance.new("TextButton")
	TabButton.Name = name
	TabButton.Parent = self.TabContainer
	TabButton.Size = UDim2.new(1, 0, 0, 35)
	TabButton.Text = ""
	TabButton.BackgroundTransparency = 1
	TabButton.AutoButtonColor = false
	
	local SelectedIndicator = Instance.new("Frame")
	SelectedIndicator.Name = "SelectedTab"
	SelectedIndicator.Parent = TabButton
	SelectedIndicator.Size = UDim2.new(0, 3, 0, 0)
	SelectedIndicator.Position = UDim2.new(0, 0, 0.5, 0)
	SelectedIndicator.AnchorPoint = Vector2.new(0, 0.5)
	ApplyDefaultGradient(SelectedIndicator)
	local indCorner = Instance.new("UICorner", SelectedIndicator); indCorner.CornerRadius = UDim.new(1,0)

	local Icon = Instance.new("ImageLabel")
	Icon.Name = "Icon"
	Icon.Parent = TabButton
	Icon.Size = UDim2.new(0, 15, 0, 15)
	Icon.Position = UDim2.new(0, 7, 0.5, 0)
	Icon.AnchorPoint = Vector2.new(0, 0.5)
	Icon.BackgroundTransparency = 1
	Icon.Image = icon
	Icon.ImageTransparency = 0.4
	
	local Title = Instance.new("TextLabel")
	Title.Name = "Title"
	Title.Parent = TabButton
	Title.Size = UDim2.new(1, -30, 1, 0)
	Title.Position = UDim2.new(0, 30, 0, 0)
	Title.BackgroundTransparency = 1
	Title.Font = Styles.Fonts.Tab
	Title.Text = name
	Title.TextSize = 14
	Title.TextColor3 = Styles.Colors.SubText
	Title.TextXAlignment = Enum.TextXAlignment.Left

	-- Página de Contenido
	local Page = Instance.new("ScrollingFrame")
	Page.Name = name .. "_Page"
	Page.Parent = self.PageContainer
	Page.Size = UDim2.new(1, 0, 1, 0)
	Page.BackgroundTransparency = 1
	Page.BorderSizePixel = 0
	Page.ScrollBarThickness = 3
	Page.AutomaticCanvasSize = Enum.AutomaticSize.Y
	Page.CanvasSize = UDim2.new()

	local PageLayout = Instance.new("UIListLayout", Page)
	PageLayout.Padding = UDim.new(0, 3)
	PageLayout.SortOrder = Enum.SortOrder.LayoutOrder
	
	-- Lógica de Selección de Pestaña
	TabButton.MouseButton1Click:Connect(function()
		for _, otherTab in pairs(self.Tabs) do
			TweenService:Create(otherTab.Button, TweenInfo.new(0.2), {BackgroundTransparency = 1}):Play()
			TweenService:Create(otherTab.Indicator, TweenInfo.new(0.2), {Size = UDim2.new(0, 3, 0, 0)}):Play()
			TweenService:Create(otherTab.Icon, TweenInfo.new(0.2), {ImageTransparency = 0.4}):Play()
			TweenService:Create(otherTab.Title, TweenInfo.new(0.2), {TextColor3 = Styles.Colors.SubText}):Play()
		end
		
		TweenService:Create(TabButton, TweenInfo.new(0.2), {BackgroundTransparency = 0.8}):Play()
		TweenService:Create(SelectedIndicator, TweenInfo.new(0.2), {Size = UDim2.new(0, 3, 0, 15)}):Play()
		TweenService:Create(Icon, TweenInfo.new(0.2), {ImageTransparency = 0}):Play()
		TweenService:Create(Title, TweenInfo.new(0.2), {TextColor3 = Styles.Colors.Text}):Play()
		
		self.PageContainer.UIPageLayout:JumpTo(Page)
		self.CurrentTab = TabObject
	end)
	
	self.Tabs[name] = {Button=TabButton, Indicator=SelectedIndicator, Icon=Icon, Title=Title, Page=Page}
	
	if self.CurrentTab == nil then
		TabButton.MouseButton1Click:Fire()
	end
	
	local TabContent = {}
	
    --- AQUI ESTAN TODAS LAS FUNCIONES PARA CREAR ELEMENTOS, COMPLETAS ---

