	function TabContent:Dropdown(text,options,current,callback) local IsDropped=false;local Dropdown=Instance.new("Frame");Dropdown.Parent=Page;Dropdown.ClipsDescendants=true;Dropdown.Size=UDim2.new(1,0,0,40);Dropdown.BackgroundTransparency=0.8;local dCorner=Instance.new("UICorner",Dropdown);dCorner.CornerRadius=UDim.new(0,5);ApplyDefaultGradient(Dropdown);local Title=Instance.new("TextLabel",Dropdown);Title.Size=UDim2.new(1,0,0,30);Title.Position=UDim2.new(0,15,0,5);Title.BackgroundTransparency=1;Title.Font=Styles.Fonts.Text;Title.Text=text;Title.TextColor3=Styles.Colors.Text;Title.TextSize=15;Title.TextXAlignment=Enum.TextXAlignment.Left;local Selected=Instance.new("TextButton",Dropdown);Selected.Size=UDim2.new(0,100,0,30);Selected.Position=UDim2.new(1,-5,0,5);Selected.AnchorPoint=Vector2.new(1,0);Selected.BackgroundColor3=Styles.Colors.LighterDark;Selected.Font=Styles.Fonts.Dropdown;Selected.Text="   "..(current or "Select");Selected.TextSize=12;Selected.TextColor3=Styles.Colors.Text;Selected.TextXAlignment=Enum.TextXAlignment.Left;local sCorner=Instance.new("UICorner",Selected);sCorner.CornerRadius=UDim.new(0,5);local Arrow=Instance.new("ImageLabel",Selected);Arrow.Size=UDim2.new(0,20,0,20);Arrow.Position=UDim2.new(1,-10,0.5,0);Arrow.AnchorPoint=Vector2.new(1,0.5);Arrow.BackgroundTransparency=1;Arrow.Image="rbxassetid://10709790948";local PageHolder=Instance.new("ScrollingFrame",Dropdown);PageHolder.Size=UDim2.new(1,0,0,100);PageHolder.Position=UDim2.new(0,0,0,40);PageHolder.BackgroundTransparency=0.8;PageHolder.BackgroundColor3=Styles.Colors.LighterDark;PageHolder.BorderSizePixel=0;PageHolder.Visible=false;local phCorner=Instance.new("UICorner",PageHolder);phCorner.CornerRadius=UDim.new(0,5);local pl=Instance.new("UIListLayout",PageHolder);pl.Padding=UDim.new(0,1);for i,v in pairs(options)do local Item=Instance.new("TextButton",PageHolder);Item.Size=UDim2.new(1,0,0,30);Item.Text="   "..v;Item.Font=Styles.Fonts.Dropdown;Item.TextSize=13;Item.TextColor3=Styles.Colors.SubText;Item.BackgroundTransparency=1;Item.TextXAlignment=Enum.TextXAlignment.Left;Item.AutoButtonColor=false;Item.MouseEnter:Connect(function()Item.TextColor3=Styles.Colors.Text end);Item.MouseLeave:Connect(function()if Selected.Text~="   "..v then Item.TextColor3=Styles.Colors.SubText end end);Item.MouseButton1Click:Connect(function()IsDropped=false;Dropdown:TweenSize(UDim2.new(1,0,0,40),"Out","Quad",0.2,true);PageHolder.Visible=false;Arrow:TweenRotation(0, "Out", "Quad", 0.2, true);Selected.Text="   "..v;for _,child in pairs(PageHolder:GetChildren())do if child:IsA("TextButton")then child.TextColor3=Styles.Colors.SubText end end;Item.TextColor3=Styles.Colors.Text;pcall(callback,v)end);if current==v then Item.TextColor3=Styles.Colors.Text end end;Selected.MouseButton1Click:Connect(function()IsDropped=not IsDropped;PageHolder.Visible=true;local goalSize=IsDropped and UDim2.new(1,0,0,145)or UDim2.new(1,0,0,40);local goalRot=IsDropped and 180 or 0;Dropdown:TweenSize(goalSize,"Out","Quad",0.2,true);Arrow:TweenRotation(goalRot,"Out","Quad",0.2,true);if not IsDropped then task.wait(0.2);PageHolder.Visible=false end end);end
    function TabContent:Slider(text, min, max, set, callback)local value=set or min;local Slider=Instance.new("Frame",self.Page);Slider.Size=UDim2.new(1,0,0,35);Slider.BackgroundTransparency=1;local Title=Instance.new("TextLabel",Slider);Title.Size=UDim2.new(1,0,1,0);Title.Position=UDim2.new(0,15,0,0);Title.BackgroundTransparency=1;Title.Font=Styles.Fonts.Text;Title.Text=text;Title.TextSize=15;Title.TextColor3=Styles.Colors.Text;Title.TextXAlignment=Enum.TextXAlignment.Left;local ValueText=Instance.new("TextLabel",Slider);ValueText.Size=UDim2.new(0,50,1,0);ValueText.Position=UDim2.new(1,-115,0,0);ValueText.BackgroundTransparency=1;ValueText.Font=Styles.Fonts.Desc;ValueText.Text=math.floor(value);ValueText.TextSize=12;ValueText.TextColor3=Styles.Colors.SubText;ValueText.TextXAlignment=Enum.TextXAlignment.Right;local Bar=Instance.new("Frame",Slider);Bar.Size=UDim2.new(0,100,0,4);Bar.Position=UDim2.new(1,-10,0.5,0);Bar.AnchorPoint=Vector2.new(1,0.5);Bar.BackgroundColor3=Styles.Colors.LighterDark;local bCorner=Instance.new("UICorner",Bar);bCorner.CornerRadius=UDim.new(1,0);local Fill=Instance.new("Frame",Bar);Fill.Size=UDim2.new((value-min)/(max-min),0,1,0);local fCorner=Instance.new("UICorner",Fill);fCorner.CornerRadius=UDim.new(1,0);ApplyDefaultGradient(Fill);local Handle=Instance.new("Frame",Bar);Handle.Size=UDim2.new(0,13,0,13);Handle.Position=UDim2.new((value-min)/(max-min),0,0.5,0);Handle.AnchorPoint=Vector2.new(0.5,0.5);Handle.BackgroundColor3=Styles.Colors.Text;local hCorner=Instance.new("UICorner",Handle);hCorner.CornerRadius=UDim.new(1,0);local Dragging=false;local function UpdateSlider(input)local percent=math.clamp((input.Position.X-Bar.AbsolutePosition.X)/Bar.AbsoluteSize.X,0,1);value=math.floor(min+(max-min)*percent);Fill.Size=UDim2.new(percent,0,1,0);Handle.Position=UDim2.new(percent,0,0.5,0);ValueText.Text=value;pcall(callback,value)end;Handle.InputBegan:Connect(function(input)if input.UserInputType==Enum.UserInputType.MouseButton1 then Dragging=true end end);Bar.InputBegan:Connect(function(input)if input.UserInputType==Enum.UserInputType.MouseButton1 then Dragging=true;UpdateSlider(input)end end);UserInputService.InputEnded:Connect(function(input)if input.UserInputType==Enum.UserInputType.MouseButton1 then Dragging=false end end);UserInputService.InputChanged:Connect(function(input)if Dragging and input.UserInputType==Enum.UserInputType.MouseMovement then UpdateSlider(input)end end);end

	return TabObject
end

return Library
